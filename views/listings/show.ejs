<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mb-5">
        <div class="col-8 offset-3 mb-3 mt-3">
            <h3><%= listing.title%></h3>

            <div class="listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">
              <div class="card-body">
                <p class="card-text">
                    <li><%= listing.address %></li>
              </div>
            </div>

            <div class="row">
                <div class="col-2"><div class="btn btn-dark" id="show-edit-btn" ><a href="/listings/<%= listing._id %>/edit">Edit this Listing</a></div></div>
                <br><br>
                <div class="col-4 dlt-button">

                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark " id="show-dlt-btn">Delete Listing</button>
                    </form>
                </div>
            </div>
         
        </div>
    </div>

<hr>
    <div class="col-8 offset-3 mb-3 mt-3">
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id%>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="reviews[rating]" class="form-range">
            </div>

            <div class="mb-3 mt-3">
                <label for="comment" form="form-label">Comments</label>
                <textarea name="reviews[comment]" id="comment" cols="30" rows="5" class="form-control mt-2" required></textarea>
                <div class="invalid-feedback">Please enter some comment.</div>
                
            </div>
            <button class="btn btn-outline-dark mb-3 mt-3" type="submit">Submit</button>
                
        </form>
    </div>
   <hr>
   <div class="col-8 offset-3 mb-3 mt-3">
   <h4>All Reviews</h4>
   <div class="reviews-style row">
   <% for(review of listing.reviews){%>
    <div class="card ms-3 col-5">
        <div class="card-body">
            <h5 class="card-title">Aniruddha Neema</h5>
           <p><%=review.comment%></p>
           <p><%=review.rating%> stars</p>
        </div> 
        <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" >
            <button class="btn btn-sm btn-dark">Delete</button>
        </form> 
    </div>
   <% } %>
</div>

</div>

</body>